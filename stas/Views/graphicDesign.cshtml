@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.GraphicDesign>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}
<!-- Main jumbotron for a primary marketing message or call to action -->
<section id="graphic_banner">
    <div class="container-fluid">
        <div class="row">
            <img src="~/img/graphicsBanner.jpg" class="img-responsive banner-image" />
            <div class="col-md-3 col-md-offset-1">
                <div class="card">
                    <div class="card-body card-white">
                        <h1 class="card-title">@Umbraco.Field("witteBox")</h1>
                    </div>
                </div>

            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6 col-md-offset-1">
                <div class="card">
                    <div class="card-body card-dark">
                        <h2 class="card-title">@Umbraco.Field("zwarteText")</h2>
                        <h4 class="card-title card-author">@Umbraco.Field("bannerAuthor", insertBefore:"-")</h4>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-6">
            <h1>@Umbraco.Field("titleText")</h1>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6 offset-2">


            <p>@Umbraco.Field("graphicColLinks") </p>

        </div>
        <div class="col-md-6 offset-2">

            <p>@Umbraco.Field("graphicColRechts") </p>

        </div>

    </div>
</div>
<br>
<br>
